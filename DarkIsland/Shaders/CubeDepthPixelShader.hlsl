struct PixelInputType
{
	float4 position : SV_POSITION;
	float4 depthPosition : TEXTURE0;
};


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float main(PixelInputType input) : SV_TARGET
{
	return input.depthPosition.z / input.depthPosition.w;
}

